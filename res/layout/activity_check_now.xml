<?xml version="1.0" encoding="utf-8"?> 
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <TableLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbars="vertical" >
    <TableRow> <!--第 一行，显示请输入基本信息 -->
        <TextView
      		android:id="@+id/information"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="8pt" />
    </TableRow>
    
    <TableRow> <!-- 1.报告编号-->
        <TextView
        	android:id="@+id/reportNo"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <EditText
        	android:id="@+id/reportNoIn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            />
    </TableRow>
    
    <TableRow> <!-- 2.校验人员姓名-->
        <TextView
        	android:id="@+id/checkName"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <EditText
        	android:id="@+id/checkNameIn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            />
    </TableRow>
    
    <TableRow> <!-- 1.仪器设备-->
        <TextView
        	android:id="@+id/deviceName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <EditText
        	android:id="@+id/deviceNameIn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            />
    </TableRow>
    <TableRow> <!--2.委托单位 -->
        <TextView
        	android:id="@+id/unit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <EditText
        	android:id="@+id/unitIn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"/>
    </TableRow>
    <TableRow> <!-- 3.单位地址-->
        <TextView
        	android:id="@+id/address"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <EditText
        	android:id="@+id/addressIn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"/>
    </TableRow>
    <TableRow> <!--4.联系人-->
        <TextView
        	android:id="@+id/contact"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <EditText
        	android:id="@+id/contactIn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"/>
    </TableRow>
    <TableRow> <!--5.联系电话 -->
        <TextView
        	android:id="@+id/phoneNo"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <EditText
        	android:id="@+id/phoneNoIn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:phoneNumber="true"/>
    </TableRow>
    
    <TableRow> <!--6.设备档案号 -->
        <TextView
        	android:id="@+id/deviceNo"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <EditText
        	android:id="@+id/deviceNoIn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:phoneNumber="true"/>
    </TableRow>
    <TableRow> <!--7.限速器型号规格 -->
        <TextView
        	android:id="@+id/governorSpec"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <EditText
        	android:id="@+id/governorSpecIn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"/>
    </TableRow>
    <TableRow> <!-- 8.限速器产品编号-->
        <TextView
        	android:id="@+id/governorNo"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <EditText
        	android:id="@+id/governorNoIn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:phoneNumber="true"/>
    </TableRow>
    <TableRow> <!--9.制造日期 -->
        <TextView
        	android:id="@+id/produceTime"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <EditText
        	android:id="@+id/produceTimeIn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:phoneNumber="true"/>
    </TableRow>
    <TableRow> <!--10.制造单位 -->
        <TextView
        	android:id="@+id/produceUnit"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <EditText
        	android:id="@+id/produceUnitIn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"/>
    </TableRow>
    <TableRow> <!--11.限速器直径 -->
        <TextView
        	android:id="@+id/governorDiameter"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <EditText
        	android:id="@+id/governorDiameterIn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:numeric="decimal"/>
    </TableRow>
    <TableRow> <!--12.限速器周长 -->
        <TextView
        	android:id="@+id/governorPerimeter"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <EditText
        	android:id="@+id/governorPerimeterIn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:numeric="decimal"/>
    </TableRow>
    <TableRow> <!--13.额定速度 -->
        <TextView
        	android:id="@+id/speed"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <EditText
        	android:id="@+id/speedIn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:numeric="decimal"/>
    </TableRow>
        <!-- 定义一组单选按钮 -->
        <RadioGroup
            android:id="@+id/safeType"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical" >
            <RadioButton
                android:id="@+id/jianJin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </RadioButton>
            <RadioButton
                android:id="@+id/buKeTuo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </RadioButton>
            <RadioButton
                android:id="@+id/shunShi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
            </RadioButton>
        </RadioGroup>
    
    
    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dp"
        android:background="#aaaaaa" />

    </TableLayout>
  </ScrollView>
</RelativeLayout>
